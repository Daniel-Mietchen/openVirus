   <math id="M5">
    <mrow>
     <mi>p</mi>
     <mo>=</mo>
     <mfrac>
      <mrow>
       <mtext>exp</mtext>
       <mo stretchy="false">(</mo>
       <msub>
        <mi>β</mi>
