       </mrow>
       <mrow>
        <mi>C</mi>
        <mi>C</mi>
       </mrow>
      </msub>
     </mrow>
     <mo>/</mo>
     <mrow>
      <msubsup>
       <mrow>
        <mi>x</mi>
       </mrow>
       <mrow>
        <mi>C</mi>
       </mrow>
       <mrow>
        <mn>2</mn>
       </mrow>
      </msubsup>
