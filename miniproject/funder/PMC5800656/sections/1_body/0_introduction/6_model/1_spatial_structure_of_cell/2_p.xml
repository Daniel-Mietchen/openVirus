    </msub>
    <mo>=</mo>
    <msub>
     <mrow>
      <mi>p</mi>
     </mrow>
     <mrow>
      <msup>
       <mrow>
        <mi>σ</mi>
       </mrow>
       <mrow>
        <mo>′</mo>
       </mrow>
      </msup>
      <mi>σ</mi>
