        </mrow>
        <mrow>
         <mi>d</mi>
         <mi>t</mi>
        </mrow>
       </mfrac>
      </mtd>
      <mtd columnalign="left">
       <mrow>
        <mo>=</mo>
        <mo>−</mo>
