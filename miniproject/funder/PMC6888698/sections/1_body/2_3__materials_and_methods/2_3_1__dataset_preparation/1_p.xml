   </mrow>
  </math>
 </disp-formula> where 
 <inline-formula>
  <math id="mm9">
   <mrow>
    <mrow>
     <msup>
      <mi mathvariant="normal">V</mi>
      <mrow>
       <mn>60</mn>
       <mi mathvariant="normal">p</mi>
      </mrow>
     </msup>
    </mrow>
   </mrow>
  </math>
 </inline-formula> and 
 <inline-formula>
  <math id="mm10">
   <mrow>
    <mrow>
     <msup>
      <mi mathvariant="normal">V</mi>
      <mrow>
       <mn>45</mn>
       <mi mathvariant="normal">n</mi>
      </mrow>
     </msup>
    </mrow>
   </mrow>
  </math>
 </inline-formula> represent collections of 60 and 45 experimentally validated AVP and Non-AVPs, respectively, while 
 <inline-formula>
  <math id="mm11">
   <mrow>
    <mrow>
     <msup>
      <mi mathvariant="normal">V</mi>
      <mrow>
       <mn>60</mn>
       <mi mathvariant="normal">n</mi>
