      </mstyle>
      <mrow>
       <mi>j</mi>
       <mo>=</mo>
       <mi>t</mi>
       <mo>+</mo>
       <mn>1</mn>
      </mrow>
      <mi>n</mi>
     </munderover>
     <mi>S</mi>
     <mi>i</mi>
     <mi>g</mi>
     <mi>n</mi>
     <mrow>
      <mo>(</mo>
      <mrow>
       <msub>
        <mi>x</mi>
        <mi>i</mi>
       </msub>
