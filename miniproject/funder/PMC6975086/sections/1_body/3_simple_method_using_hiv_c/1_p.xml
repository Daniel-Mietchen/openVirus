 <disp-formula id="Equr">
  <alternatives>
   <tex-math id="M73">\documentclass[12pt]{minimal} \usepackage{amsmath} \usepackage{wasysym} \usepackage{amsfonts} \usepackage{amssymb} \usepackage{amsbsy} \usepackage{mathrsfs} \usepackage{upgreek} \setlength{\oddsidemargin}{-69pt} \begin{document} $$I_{3}=I_{2}+\varepsilon_{2}, \text{ where}\ \varepsilon_{2} \text{ is small}.$$ \end{document}</tex-math>
