    <td align="left" rowspan="1" colspan="1">Strumia et al[
     <xref rid="B22" ref-type="bibr">22</xref>]
    </td>
    <td rowspan="1" colspan="1">2004</td>
    <td rowspan="1" colspan="1">Male/81</td>
    <td rowspan="1" colspan="1">ESRD</td>
    <td rowspan="1" colspan="1">Hemodialysis</td>
    <td rowspan="1" colspan="1">Oral valacyclovir 1000 mg every 8 h then intravenous acyclovir in full dosage</td>
    <td rowspan="1" colspan="1">3 d</td>
    <td rowspan="1" colspan="1">Not mentioned</td>
    <td rowspan="1" colspan="1">Visual hallucination, confusion and disorientation</td>
    <td rowspan="1" colspan="1">3 daysd completely recovered 6 d later</td>
   </tr>
