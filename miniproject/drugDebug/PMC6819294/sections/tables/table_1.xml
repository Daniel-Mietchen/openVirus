    <td align="left" rowspan="1" colspan="1">Linssen-Schuurmans et al[
     <xref rid="B23" ref-type="bibr">23</xref>]
    </td>
    <td rowspan="1" colspan="1">1998</td>
    <td rowspan="1" colspan="1">Male/58</td>
    <td rowspan="1" colspan="1">CKD</td>
    <td rowspan="1" colspan="1">Intermittent hemodialysis twice a week</td>
    <td rowspan="1" colspan="1">Valacyclovir 3 g/d</td>
    <td rowspan="1" colspan="1">2 d</td>
    <td rowspan="1" colspan="1">Not mentioned</td>
    <td rowspan="1" colspan="1">Dizziness, hallucinations, loss of decorum, disoriented, slurred speech</td>
