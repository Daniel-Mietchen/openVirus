   <tex-math id="M3">\documentclass[12pt]{minimal} \usepackage{amsmath} \usepackage{wasysym} \usepackage{amsfonts} \usepackage{amssymb} \usepackage{amsbsy} \usepackage{mathrsfs} \usepackage{upgreek} \setlength{\oddsidemargin}{-69pt} \begin{document}$$I = \frac{{\sum\nolimits_{i = 1}^{n} {\sum\nolimits_{j = 1}^{n} {w_{ij} \left( {y_{i} - \bar{y}} \right)\left( {y_{j} - \bar{y}} \right)} } }}{{\sum\nolimits_{i = 1}^{n} {\left( {y_{i} - \bar{y}} \right)^{2} } }}$$\end{document}</tex-math>
